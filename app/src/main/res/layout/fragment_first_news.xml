<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FirstNewsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/VerticalRecycler"
            android:layout_width="408dp"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/FirstNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif"
        android:text="\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n \n\n\nTï»¿he New South Wales will unveil a suite of emergency domestic and family violence policies in the coming days in an attempt to address the level of violent crime against women.
The entire state cabinet held a special meeting this morning to hear from domestic and family violence experts, including former Australian of the Year Rosie Batty and Marcia Neave, who headed the Victorian royal commission into the issue.
Deputy Premier Prue Car said NSW government would unveil an emergency package "
        android:textAlignment="center"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="389dp"
        android:layout_height="269dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cabinet" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:layout_gravity="bottom|left"
        android:fontFamily="sans-serif-black"
        android:text="Related Story:" />


    <ImageButton
        android:id="@+id/RelatedStory1"
        android:layout_width="162dp"
        android:layout_height="147dp"
        android:layout_gravity="bottom|left"
        android:scaleType="centerCrop"
        android:src="@drawable/sydnews" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="147dp"
        android:layout_gravity="bottom|right"
        android:fontFamily="sans-serif"
        android:text="\n\nSydney man charged with blackmail over clubs data breach"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/Back1"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_weight="1"
        android:background="@color/white"
        android:src="@android:drawable/ic_menu_revert" />



</FrameLayout>